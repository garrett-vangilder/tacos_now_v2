doctype html
html
  head
    title TacosNow
    link(rel='stylesheet', href='/dist/bootstrap.min.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Rubik:300,400,500,700")
    link(rel='stylesheet', href='/dist/style.css')
  body
    block header
      header
        nav.nav
          .nav--section
            li.nav--item
              a.nav--link.nav--title(href="/") Tacos Now
            each item in h.menu
              li.nav--item
                a.nav--link(href=item.slug, class=(currentPath.startsWith(item.slug) ? 'nav--link--active' : ''))
                  span #{item.icon} #{item.title} 

    block content
    block footer
      footer.footer
        .container.text-center
          p &copy; #{ new Date().getFullYear() } Garrett Vangilder All Rights Reserved.
        


    block scripts
      script(src="/dist/App.bundle.js")
